<%- include("partials/header.ejs") %>
<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label for="postTitle" class="form-label">Title</label>
        <input type="text" class="form-control" id="postTitle" name="postTitle">
    </div>
    <div class="mb-3">
        <label for="postContent" class="form-label">Post</label>
        <textarea cols="30" rows="5" class="form-control" id="postContent" name="postContent"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3" name="button">Publish</button>
</form>

